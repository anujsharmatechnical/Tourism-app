                      h1
     
    .colorlib-tour.colorlib-light-grey
        .container
            .row
                .col-md-6.col-md-offset-3.text-center.colorlib-heading.animate-box
                    .slider-text-inner.text-center
                        p(style="font-size:55px;margin-bottom:-30px;") Gallery
        .tour-wrap
            each vr in gallery
                a.tour-entry.animate-box(href='#')
                    img.tour-img(src="/images/"+vr.img ,height="60%", width="100%")
                    span.desc 
                        h2(style="font-size:25px;")=vr.place
    
    #colorlib-hotel
        .container
            .row
              .col-md-6.col-md-offset-3.text-center.colorlib-heading.animate-box
                p(style="font-size:45px;") Recommended Hotels    
            .row
              .col-md-12.animate-box
                .owl-carousel
                  each vrr in res1
                    .item
                      .hotel-entry
                        img.hotel-img(src="/images/"+vrr.imgHotel )
                        .desc 
                          h3
                            a(href='#')=vrr.hotelName
                          span.place(style="font-size:20px")=vrr.place

