                              option(name="d1") Dalhousie
                              option(name="d11") Dharamshala
                              option(name="k1") Kullu-Manali
                              option(name="p1") Palampur 
                              option(name="l1") Lahaul-Spiti                                    
                        |  
                        .row                                       
